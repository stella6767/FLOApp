<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:background="#090D12">


    <TextView
        android:id="@+id/tv_search_list_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="애쉬아일랜드"
        android:textColor="@android:color/darker_gray"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_search_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_list_title" />

    <TextView
        android:id="@+id/tv_search_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="멜로디"
        android:textSize="17dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/iv_search_list_art"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_search_list_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_library_add"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/iv_search_list_play"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_search_list_add"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play"
        app:tint="@color/white" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_search_list_art"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/ashisland_melody"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:riv_corner_radius="5dip" />


</androidx.constraintlayout.widget.ConstraintLayout>